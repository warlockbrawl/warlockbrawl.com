block config
  -
    var app = {
      url: 'https://www.warlockbrawl.com/',
      name: 'Warlock Brawl',
      title: 'Warlock Brawl',
      description: 'The official website for the Dota 2 and Warcraft 3 mod, Warlock, and the upcoming standalone. Discuss updates on our forums, play in tournaments, and more!',
      bodyAttrs: {}
    };

doctype html
html(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(name="description", content= app.description)
      title= app.title
      block styles
        link(rel="stylesheet", href="/assets/css/app.css")
      block scripts
        script(src="/assets/js/app.js")
  body&attributes(app.bodyAttrs)
    div#app.app
      block app
        nav.app-navigation.navbar.navbar-inverse.navbar-fixed-top
          block navigation
            div.container
              div.navbar-header
                button.navbar-toggle.collapsed(
                  type="button",
                  data-toggle="collapse",
                  data-target="#navbar",
                  aria-expanded="false",
                  aria-controls="navbar")
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand(href="/")= app.name
              div#navbar.collapse.navbar-collapse
                ul.nav.navbar-nav
                  block navigation-links
                    li(class=(app.activeNav==='/download'?'active':'')) #[a(href="/download") Download]
                    li(class=(app.activeNav==='/faq'     ?'active':'')) #[a(href="/faq") FAQ]
                    li(class=(app.activeNav==='/forums'  ?'active':'')) #[a(href="/forums") Forum]

        main#content.app-content
          block content

        footer#footer.app-footer
          block footer
            div.container
              hr
              p &copy; 2008-2016 #{app.name}
